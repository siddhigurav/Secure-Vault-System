# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=secure_vault
DB_USER=vault_admin
DB_PASSWORD=your_secure_password_here

# Audit Database (Separate for immutability)
AUDIT_DB_HOST=localhost
AUDIT_DB_PORT=5432
AUDIT_DB_NAME=vault_audit
AUDIT_DB_USER=audit_admin
AUDIT_DB_PASSWORD=your_audit_password_here

# Encryption Keys
# CRITICAL: In production, use HSM or cloud KMS (AWS KMS, Azure Key Vault, Google Cloud KMS)
# This master key should be 256 bits (32 bytes) in hex format
MASTER_ENCRYPTION_KEY=your_256_bit_hex_key_here_64_characters_long_example_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_recommended
JWT_EXPIRY=8h

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
